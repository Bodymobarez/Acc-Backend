{
  "name": "backend",
  "version": "2.0.0",
  "description": "Modernized backend with Bun + Hono + Redis + BullMQ + Rust WASM",
  "engines": {
    "bun": ">=1.1.0"
  },
  "scripts": {
    "dev": "bun --watch server/index-hono.ts",
    "start": "bun server/index-hono.ts",
    "dev:old": "bun --watch server/index.ts",
    "start:old": "bun server/index.ts",
    "build": "bun build server/index-hono.ts --outdir ./dist --target bun",
    "test": "bun test",
    "db:migrate": "bun x prisma migrate deploy",
    "db:generate": "bun x prisma generate",
    "db:studio": "bun x prisma studio",
    "wasm:build": "cd accounting-engine && wasm-pack build --target nodejs",
    "workers:dev": "bun server/workers/index.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.4",
    "@prisma/client": "^6.19.0",
    "@upstash/redis": "^1.34.3",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.12.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-validator": "^7.3.0",
    "hono": "^4.5.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.3",
    "multer": "^1.4.5-lts.2",
    "pdfkit": "^0.17.2",
    "serverless-http": "^4.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@bull-board/api": "^6.3.0",
    "@bull-board/hono": "^6.3.0",
    "@hono/node-server": "^1.12.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/bun": "^1.3.2",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.10.1",
    "prisma": "^6.19.0",
    "typescript": "^5.9.3"
  }
}
